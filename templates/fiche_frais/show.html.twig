{% extends 'base.html.twig' %}

{% block title %}Fiche de frais n°{{ fiche_frai.id }}{% endblock %}

{% block body %}
<center>
    <h1 class="bleu-gsb">Fiche de frais n°{{ fiche_frai.id }}</h1>

    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-12"></div>

        <div class="col-lg-6 col-md-6 col-sm-12">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ fiche_frai.id }}</td>
                    </tr>
                    <tr>
                        <th>Mois</th>
                        <td>{{ fiche_frai.mois }}</td>
                    </tr>
                    <tr>
                        <th>Nombre de justificatifs</th>
                        <td>{{ fiche_frai.nbJustificatifs }}</td>
                    </tr>
                    <tr>
                        <th>Montant total (en €)</th>
                        <td>{{ fiche_frai.montantValide }}</td>
                    </tr>
                    <tr>
                        <th>Date de modification</th>
                        <td>{{ fiche_frai.dateModif ? fiche_frai.dateModif|date('d-m-Y à H:i') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12"></div>

    </div>

    <a href="{{ path('fiche_frais_edit', {'id': fiche_frai.id}) }}"><button class="btn btn-warning">Modifier</button></a>
    <br><br>
    {{ include('fiche_frais/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('fiche_frais_index') }}"><button class="btn btn-primary">Retour</button></a>
</center>
{% endblock %}
