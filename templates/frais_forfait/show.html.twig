{% extends 'base.html.twig' %}

{% block title %}{{ frais_forfait.libelle }}{% endblock %}

{% block body %}
<center>
    <h1 class="bleu-gsb">{{ frais_forfait.libelle }}</h1>

    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-12"></div>

        <div class="col-lg-6 col-md-6 col-sm-12">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ frais_forfait.id }}</td>
                    </tr>
                    <tr>
                        <th>Abreviation</th>
                        <td>{{ frais_forfait.abreviation }}</td>
                    </tr>
                    <tr>
                        <th>Libelle</th>
                        <td>{{ frais_forfait.libelle }}</td>
                    </tr>
                    <tr>
                        <th>Montant (en €)</th>
                        <td>{{ frais_forfait.montant }} €</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12"></div>

    </div>

    <a href="{{ path('frais_forfait_edit', {'id': frais_forfait.id}) }}"><button class="btn btn-warning">Modifier</button></a>
    <br><br>
    {{ include('frais_forfait/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('frais_forfait_index') }}"><button class="btn btn-primary">Retour</button></a>
</center>
{% endblock %}
